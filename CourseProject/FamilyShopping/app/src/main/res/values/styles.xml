<resources>

    <style name="ListItemText">
        <item name="android:textColor">@color/colorLightBlack</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
    </style>

    <style name="LoginCreateText">
        <item name="android:textSize">@dimen/login_buttons_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="LoginCreateTextButton">
        <item name="android:textSize">@dimen/login_buttons_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FAB">
        <item name="android:layout_margin">0dp</item>
        <item name="fabSize">normal</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

</resources>
